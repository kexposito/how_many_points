{{#paper-dialog
  onClose=(action "closeDialog" "cancel")
  origin=dialogOrigin
  class="modal-size"
  clickOutsideToClose=true
}}
  {{#paper-toolbar}}
    {{#paper-toolbar-tools}}
      {{#paper-button
        iconButton=true
        onClick=(action "closeDialog" "cancel")
      }}
        {{paper-icon icon="close"}}
      {{/paper-button}}
      <h2>New Member</h2>
      <span class="flex"></span>
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}
  {{#paper-dialog-content}}
      {{paper-input
        class="flex"
        label="Member username"
        value=username
        onChange=(action (mut username))
      }}
  {{/paper-dialog-content}}
  {{#paper-dialog-actions}}
    {{#paper-button
      class="flex"
      onClick=(action "saveMember")
    }}
      Add Member
    {{/paper-button}}
  {{/paper-dialog-actions}}
{{/paper-dialog}}
